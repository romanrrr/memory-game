<?xml version="1.0" encoding="utf-8"?>
<com.snatik.matches.ui.TileView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tile_front"
        android:background="@drawable/window_panel_main"
        android:gravity="center_horizontal|center_vertical"
        android:weightSum="10">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9"
            android:weightSum="10"
            android:orientation="vertical"
            android:gravity="center_horizontal|center_vertical">
            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:gravity="center_horizontal|center_vertical"
                android:scaleType="centerCrop" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/image_top"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/window_panel_main" >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@drawable/tile_back_star"
            android:visibility="invisible"/>
    </RelativeLayout>

</com.snatik.matches.ui.TileView>